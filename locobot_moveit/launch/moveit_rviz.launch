<launch>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <arg name="robot_name" default=""/>
  <arg name="config" default="false" />
  <arg unless="$(arg config)" name="command_args" value="-f $(arg robot_name)/base_footprint" />
  <arg     if="$(arg config)" name="command_args" value="-f $(arg robot_name)/base_footprint -d $(find locobot_moveit)/launch/moveit.rviz" />

  <node name="$(anon rviz)" launch-prefix="$(arg launch_prefix)" pkg="rviz" type="rviz" respawn="false"
	args="$(arg command_args)" output="screen">
    <rosparam command="load" file="$(find locobot_moveit)/config/kinematics.yaml"/>
  </node>

</launch>
